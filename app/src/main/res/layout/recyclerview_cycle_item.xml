<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bicyclelist_background"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/bicycle"
        android:id="@+id/icon"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/name"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintRight_toLeftOf="@id/dest"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="name"
        android:textSize="20dp"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/dest"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/avail"
        app:layout_constraintLeft_toRightOf="@id/name"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="destination"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/avail"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dest"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="O"
        android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>