<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_name"/>

    <EditText
        android:id="@+id/register_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="이름"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_title"
        app:layout_constraintBottom_toTopOf="@id/register_phone"/>

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="전화번호"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@id/register_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_name" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="자전거 비밀번호"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toTopOf="@id/register_startpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_phone" />

    <Spinner
        android:id="@+id/register_startpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/rent_place"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/register_password"
        app:layout_constraintBottom_toTopOf="@id/register_endpoint"/>

    <Spinner
        android:id="@+id/register_endpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/rent_place"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/register_startpoint"
        app:layout_constraintBottom_toTopOf="@id/register_submit"/>


    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_button"
        android:text="추가"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_endpoint"/>

</androidx.constraintlayout.widget.ConstraintLayout>